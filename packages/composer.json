{
    "type": "project",
    "license": "MIT",
    "description": "Bauhaus packages tests",

    "scripts": {
        "test:all": [ "@test:cs", "@test:unit" ],
        "test:cs": [ "@test:cs:syntax", "@test:cs:dependency" ],

        "test:cs:syntax": "phpcs -ps",
        "test:cs:dependency": "deptrac --no-cache --fail-on-uncovered --report-uncovered",
        "test:cs:dependency:graph": "@test:cs:dependency --formatter=graphviz-image --output=./reports/dep-graph.svg",
        "test:unit": "phpunit",
        "test:mutation": "infection run -s -j4"
    },

    "autoload": {
        "psr-4": { "Bauhaus\\Tests\\": "./tests" }
    },

    "require": {
        "bauhaus/http-message": "dev-main",
        "bauhaus/service-resolver": "dev-main"
    },

    "repositories": [
        { "type":"path", "url": "src/*/" }
    ],

    "config": {
        "sort-packages": false
    }
}
