{
    "description": "Tests for bauhaus packages",

    "type": "project",
    "license": "MIT",

    "scripts": {
        "test:cs": "phpcs -ps --standard=config/phpcs.xml",
        "test:unit": "phpunit -c config/phpunit.xml --coverage-html reports/coverage",
        "test:mutation": "infection run -s -j4 -c config/infection.json",
        "test:all": [
            "@test:cs",
            "@test:unit",
            "@test:mutation"
        ]
    },

    "autoload": {
        "psr-4": {
            "Bauhaus\\Tests\\": "./tests"
        }
    },

    "require": {
        "bauhaus/service-resolver": "dev-main",

        "infection/infection": "^0.26.13",
        "phpunit/phpunit": "^9.5",
        "qossmic/deptrac-shim": "^0.24.0",
        "squizlabs/php_codesniffer": "^3.7"
    },

    "repositories": [
        { "type":"path", "url": "./packages/*/" }
    ],

    "config": {
        "sort-packages": false,
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
