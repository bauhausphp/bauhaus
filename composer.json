{
    "type": "project",
    "license": "MIT",
    "description": "Bauhaus packages tests",

    "scripts": {
        "test:all": [
            "@test:syntax",
            "@test:dependency",
            "@test:unit",
            "@test:mutation"
        ],

        "test:syntax": "phpcs -ps --standard=config/phpcs.xml",
        "test:dependency": "deptrac --config-file=config/depfile.yaml --cache-file=cache/deptrac.cache",
        "test:unit": "phpunit -c config/phpunit.xml",
        "test:mutation": "infection run -s -j4 -c config/infection.json"
    },

    "autoload": {
        "psr-4": { "Bauhaus\\Tests\\": "./tests" }
    },

    "require": {
        "bauhaus/service-resolver": "dev-main"
    },

    "repositories": [
        { "type":"path", "url": "./packages/*/" }
    ],

    "config": {
        "sort-packages": false,
        "allow-plugins": { "infection/extension-installer": false }
    }
}
