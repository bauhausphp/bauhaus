{
    "description": "Tests for bauhaus packages",

    "type": "project",
    "license": "MIT",

    "scripts": {
        "test:cs": "phpcs -ps --standard=config/phpcs.xml",
        "test:unit": "phpunit -c config/phpunit.xml",
        "test:all": [
            "@test:cs",
            "@test:unit"
        ]
    },

    "autoload": {
        "psr-4": {
            "Bauhaus\\Tests\\": "./tests/"
        }
    },

    "require": {
        "bauhaus/service-resolver": "dev-main",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },

    "repositories": [
        { "type":"path", "url": "./packages/*/" }
    ]
}
